<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Define your primary colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize EditText and Button styles -->
        <item name="android:editTextStyle">@style/CustomEditText</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
    </style>

    <!-- Custom EditText style -->
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Custom Button style -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CustomEditTextLine" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/lines_edt</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
